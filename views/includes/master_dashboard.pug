  #visualization {
  width: 100%;
  height: 100%;
  /*border: 1px solid lightgray;*/
  }
  .vis-item.ek {
    background-color: #00bc8c;
    border-color: #444;
  }
  .vis-item.gf {
    background-color: #3498DB;
    border-color: #444;
  }
  .vis-item.zf {
