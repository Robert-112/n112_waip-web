  }
  .vis-item.vf-agt {
    background-color: #E74C3C;
    border-color: #F39C12;
    border-width: 2px;
  }
  .vis-inner, .vis-time-axis .vis-text {
    color: #fff;
  }
  .vis-item {
    color: #fff;
    font-size: 0.875em;
    font-weight: 400;
  }
  .vis-timeline {
    /*border: 1px solid #444;*/
    background: #303030;   
  }
  .vis-time-axis .vis-grid.vis-minor {
    border-color: #444;
  }
  .vis-current-time {
    background: #E74C3C;    
  }
  .vis-custom-time {
    background: #3498DB;    
  }
  /*.vis-custom-time > .vis-custom-time-marker*/
   .vis-custom-time-marker {  
    right: 2px;
  }
  .vis-rolling-mode-btn:before {
    content: "\2B8C";
  }
  .vis-inner, .vis-label .vis-group-level-0  {
    width: 25px;
    transform: rotate(90deg);
    white-space: nowrap;
  }

